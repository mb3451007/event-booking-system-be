const mongoose = require('mongoose');

const itemSubitemSchema = new mongoose.Schema({
  item_id: { 
    type: mongoose.Schema.Types.ObjectId, 
    ref: 'Item', 
    required: true 
  },
  subitem_id: { 
    type: mongoose.Schema.Types.ObjectId, 
    ref: 'SubItem', 
    required: false 
  },
  package_id: { 
    type: mongoose.Schema.Types.ObjectId, 
    ref: 'Package', 
    required: false 
  }
});

module.exports = mongoose.model('ItemSubitem', itemSubitemSchema);
